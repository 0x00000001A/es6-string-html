{
  "fileTypes": [
    "js",
    "jsx",
    "ts",
    "tsx",
    "html"
  ],
  "injectionSelector": "L:source.js -comment -string, L:source.js -comment -string, L:source.jsx -comment -string,  L:source.js.jsx -comment -string, L:source.ts -comment -string, L:source.tsx -comment -string",
  "injections": {
    "L:source": {
      "patterns": [
        {
          "match": "<",
          "name": "invalid.illegal.bad-angle-bracket.html"
        }
      ]
    }
  },
  "repository": {
    "highlight-html": {
      "patterns": [
        {
          "include": "#keep-comments"
        },
        {
          "include": "#simple-html"
        },
        {
          "include": "#advanced-html"
        }
      ]
    },
    "keep-comments": {
      "patterns": [
        {
          "name": "string.quoted.template.js",
          "match": "\\s*([^\\<]*)\\s*\\n"
        }
      ]
    },
    "simple-html": {
      "patterns": [
        {
          "comment": "It's matches only tags but not anything inside",
          "begin": "(<)\\!?([\\w\\s]*)(?<!/)((?: ?/)?>)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "end": "(<\/)\\!?([\\w\\s]*)(?<!/)((?: ?/)?>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "patterns": [
            {
              "include": "text.html.derivative"
            }
          ]
        }
      ]
    },
    "advanced-html": {
      "patterns": [
        {
          "comment": "It's matches only tags but not anything inside",
          "begin": "(<\/?)\\!?(\\w[^\\s>]*)(?<!/)",
          "end": "((?: ?/)?>)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          },
          "patterns": [
            {
              "include": "text.html.basic#attribute"
            }
          ]
        }
      ]
    } 
  },
  "patterns": [
    {
      "comment": "Case: comma on the same line, but HTML is on the next line",
      "begin": "(\\=|\\:|\\,|\\>)\\s*(`)$",
      "beginCaptures": {
        "1": {
          "name": "keyword.operator.assignment.js"
        },
        "2": {
          "name": "string.quoted.template.js"
        }
      },
      "end": "\\s*(`)$",
      "endCaptures": {
        "1": {
          "name": "string.quoted.template.js"
        }
      },
      "patterns": [
        {
          "include": "#highlight-html"
        }
      ]
    },
    {
      "comment": "Case: lit",
      "begin": "(\\s|^|\\W)([_$[:alpha:]][_$[:alnum:]]*)`",
      "beginCaptures": {
        "2": {
          "name": "entity.name.function.js"
        }
      },
      "end": "\\s*(`)$",
      "endCaptures": {
        "1": {
          "name": "string.quoted.template.js"
        }
      },
      "patterns": [
        {
          "include": "#highlight-html"
        }
      ]
    },
    {
      "comment": "Case: singleline",
      "begin": "(\\=|\\:|\\,|\\>)\\s*(`)\\s*(<)\\!?([\\w\\s]*)(?<!/)((?: ?/)?>)",
      "beginCaptures": {
        "3": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "4": {
          "name": "entity.name.tag.html"
        }
      },
      "end": "(<\/)\\!?([\\w\\s]*)(?<!/)((?: ?/)?>)\\s*(`)$",
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.tag.begin.html"
        },
        "2": {
          "name": "entity.name.tag.html"
        }
      },
      "patterns": [
        {
          "include": "#highlight-html"
        }
      ]
    }
  ],
  "scopeName": "inline.es6-html"
}